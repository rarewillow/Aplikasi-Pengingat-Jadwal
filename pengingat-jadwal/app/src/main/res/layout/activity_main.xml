<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp">

        <Button
            android:id="@+id/basicNotification"
            android:layout_width="192dp"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="basicNotify"
            android:text="Pengingat Kelas" />

        <Button
            android:id="@+id/headsupNotification"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:onClick="headsUpNotify"
            android:text="Notifikasi" />

        <Button
            android:id="@+id/expandableNotification"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:onClick="expandableNotify"
            android:text="Ruangan" />
    </RelativeLayout>
</LinearLayout>